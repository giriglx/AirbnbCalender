<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/rl_done_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <RelativeLayout
                    android:id="@+id/rl_iv_back_btn_bg"
                    android:layout_width="50dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/iv_back_btn"
                    android:src="@drawable/aricalendar_btn_back" />

                <RelativeLayout
                    android:id="@+id/rl_reset_btn"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:text="Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorTest"
                    android:layout_marginRight="15dp"
                    android:textSize="17sp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tv_reset" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_start_date"
                        android:text="Start"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical|start"
                        android:textColor="@color/material_grey_800"
                        android:textSize="27sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10sp"
                        android:layout_centerVertical="true"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40sp"
                        android:background="#414141"
                        android:rotation="35"
                        android:layout_gravity="center_horizontal|center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_end_date"
                        android:text="End"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/material_grey_800"
                        android:layout_centerVertical="true"
                        android:textSize="27sp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="37dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="11dp"
                    android:weightSum="7"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="Su"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="Mo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="Tu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="We"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="Th"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="Fr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="SA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="11sp"
                            android:textColor="#414141" />
                    </RelativeLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d8d8d8"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>

        <com.yongbeom.aircalendar.core.DayPickerView
            android:id="@+id/pickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            calendar:drawRoundRect="true"

            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_done_btn"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:background="@color/colorTest"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView34" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_checkout_select_info_popup"
        android:background="#bf000000"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="308dp"
            android:layout_height="160dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안내"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/tv_popup_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_popup_title"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#4a4a4a"
                android:layout_marginTop="13dp"
                android:text="날짜를 선택해주세요."/>


            <RelativeLayout
                android:id="@+id/rl_popup_select_checkout_info_ok"
                android:layout_width="220dp"
                android:layout_height="42dp"
                android:layout_marginBottom="14dp"
                android:gravity="center"
                android:background="@drawable/aircalendar_btn_style"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text="확인"
                    android:textSize="15sp"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
